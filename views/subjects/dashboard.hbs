<div class="dashboard-header">
  <h1 class="page-header welcome-font">{{subject.title}}</h1>
</div>

<div class=section-3>
<div class="row">

  <div class="col-md-3 col-sm-3">
    <ul>
      <li><a class="btn create-btn btn-lg" href="/subjects/{{subject.id}}/study" role="button">Study</a></li>
      <li><a class="btn create-btn btn-lg" href="/cards/new" role="button">Create Card</a></li>
    </ul>
  </div>
<div class="col-md-9 col-sm-9 pull-right pad-tron">
    {{#each cards}}
      <div class="group-button pull-right">
        <ul>

          <li>
            <a class="btn edit-delete-btn" href="/cards/edit/{{id}}">
              <span class="glyphicon glyphicon-pencil"></span>
            </a>
          </li>

          <li>
            <a class="btn edit-delete-btn" href="/cards/delete/{{id}}/{{subject_id}}">
              <span class="glyphicon glyphicon-remove"></span>
            </a>
          </li>
          
        </ul>
      </div>
      
      <div class="jumbotron">
        <h3 class="text-center">{{front}}</h3>
        <h3 class="text-center">{{back}}</h3>
      </div>
      
          {{/each}} 
  </div
</div>




