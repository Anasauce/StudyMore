<div class="dashboard-header">
  <h1 class="page-header welcome-font">Hello, {{username}}! Let's Start Studying...</h1>
</div>
<div class=section-3>
<div class="row">

  <div class="col-md-3 col-sm-3">
    <ul>
      <li><a class="btn create-btn btn-lg" href="/subjects/new" role="button">Create Subject</a></li>
      <li><a class="btn create-btn btn-lg" href="/cards/new" role="button">Create Card</a></li>
    </ul>
  </div>

  <div class="col-md-9 col-sm-9 pull-right pad-tron">
    {{#each subject}}
      <div class="group-button pull-right">
        <ul>

          <li>
            <a class="btn edit-delete-btn" href="/subjects/edit/{{id}}">
              <span class="glyphicon glyphicon-pencil"></span>
            </a>
          </li>

          <li>
            <a class="btn edit-delete-btn" href="/subjects/delete/{{id}}">
              <span class="glyphicon glyphicon-remove"></span>
            </a>
          </li>
        </ul>
      </div>

      <div class="jumbotron">
        <div class="text-center">{{cards}} cards</div>
        <h3><a href="/subjects/{{id}}">{{title}}</a></h3>
      </div>

    {{/each}}
  </div
  </div>
</div>
