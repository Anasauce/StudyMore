<div class="container">
  <div class="col-md-5">
    <div class="form-area">
      <form role="form" method="post" action="/cards/create_card">
        <h3 style="margin-bottom: 25px; text-align: center;">Create A New Flashcard</h3>
        <div class="form-group">
          <textarea class="form-control" name="front" type="textarea" maxlength="140" rows="7"></textarea>
        </div>

        <div class="form-group">
          <textarea class="form-control" name="back" type="textarea" maxlength="140" rows="7"></textarea>
        </div>

        <div class="form-group">
          <select class="selectpicker" data-style="btn-primary" name="id">
            {{#each subject}}
              <option value={{id}}> {{title}} </option>
            {{/each}}
          </select>
        </div>

        <button type="submit" name="submit" class="btn btn-primary pull-right">Submit Form</button>
      </form>
    </div>
  </div>
</div>
