<div class="container">
  <div class="col-md-5">
    <div class="form-area">
      <form role="form" method="post" action="/cards/edit/{{card.id}}">
        <h3 style="margin-bottom: 25px; text-align: center;">Current Subject: {{subject.title}}</h3>
        
        <div class="form-group">
          <textarea class="form-control" name="front" type="textarea" maxlength="140" rows="7">{{card.front}}</textarea>
        </div>

        <div class="form-group">
          <textarea class="form-control" name="back" type="textarea" maxlength="140" rows="7">{{card.back}}</textarea>
        </div>

        <div class="form-group">
          <select class="selectpicker" data-style="btn-primary" name="id">
            {{#each subjects}}
              <option value={{id}}> {{title}} </option>
            {{/each}}
          </select>
        </div>

        <button type="submit" name="submit" class="btn btn-primary pull-right">Submit Form</button>
      </form>
    </div>
  </div>
</div>
