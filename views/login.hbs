
<div class="login">
<form action="/users/login" method="post" class="form-horizontal">
  <fieldset>
  <div class="form-group">
    <label class="col-md-4 control-label" for="email"><h4>E-mail</h4></label>  
    <div class="col-md-4">
    <input id="email" name="email" type="text" placeholder="john.smith@mail.com" class="form-control input-md" required="">
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-4 control-label" for="password"><h4>Password</h4></label>
    <div class="col-md-4">
      <input id="password" name="password" type="password" placeholder="Enter your password" class="form-control input-md" required="">
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-4 control-label" for="singlebutton"></label>
    <div class="col-md-4">
      <button class="btn login-button">Login</button>
    </div>
  </div>
  </fieldset>
</form>
</div>